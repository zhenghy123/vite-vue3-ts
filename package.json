{
  "name": "vite-vue3-ts",
  "version": "0.0.0",
  "license": "MIT",
  "description": "a vite + vue3 + pinia + typescript + ant-design-vue template",
  "keywords": [
    "vite",
    "vue3",
    "vue-router",
    "setup",
    "typescript",
    "pinia",
    "ant-design-vue",
    "template"
  ],
  "homepage": "https://github.com/js-banana/vite-vue3-ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/js-banana/vite-vue3-ts.git"
  },
  "engines": {
    "node": "^12 || >=14"
  },
  "scripts": {
    "bootstrap": "yarn install",
    "check": "vue-tsc --noEmit",
    "serve": "npm run dev",
    "dev": "vite",
    "dev:development": "vite --mode development",
    "build:production": "vue-tsc --noEmit && vite build --mode production",
    "build": "vite build",
    "build:check": "vue-tsc --noEmit && vite build",
    "build:github": "vite build --base=/vite-vue3-ts/",
    "build:no-cache": "yarn clean:cache && npm run build",
    "preview": "vite preview",
    "clean:cache": "rimraf node_modules/.cache/ && rimraf node_modules/.vite",
    "clean:lib": "rimraf node_modules",
    "lint:eslint": "eslint --cache --max-warnings 0  \"{src,mock}/**/*.{vue,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:lint-staged": "lint-staged -c ./.husky/lintstagedrc.js",
    "reinstall": "rimraf yarn.lock && rimraf package.lock.json && rimraf node_modules && npm run bootstrap",
    "prepare": "husky install"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^6.0.1",
    "@vueuse/core": "^6.8.0",
    "@vueuse/head": "^0.6.0",
    "ant-design-vue": "2.2.8",
    "axios": "^0.24.0",
    "buffer": "^6.0.3",
    "crypto-js": "^4.1.1",
    "echarts": "^5.2.2",
    "lodash-es": "^4.17.21",
    "moment": "^2.29.1",
    "pinia": "^2.0.3",
    "sanitize.css": "^13.0.0",
    "vue": "^3.2.16",
    "vue-request": "^1.2.3",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/lodash-es": "^4.17.5",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vitejs/plugin-legacy": "^1.6.2",
    "@vitejs/plugin-vue": "^1.9.3",
    "@vitejs/plugin-vue-jsx": "^1.2.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-define-config": "~1.0.9",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.17.0",
    "husky": "^8.0.1",
    "jest": "^27.4.2",
    "less": "^4.1.2",
    "lint-staged": "^13.0.0",
    "mockjs": "^1.1.0",
    "postcss": "^8.3.11",
    "postcss-html": "^1.2.0",
    "postcss-less": "^5.0.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.5.2",
    "typescript": "^4.4.3",
    "unplugin-auto-import": "^0.4.14",
    "unplugin-vue-components": "^0.17.2",
    "vite": "^2.6.4",
    "vite-plugin-compression": "^0.3.6",
    "vite-plugin-mock": "^2.9.6",
    "vite-plugin-style-import": "^1.3.0",
    "vite-plugin-svg-icons": "^1.0.5",
    "vue-eslint-parser": "^7.11.0",
    "vue-tsc": "^0.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,vue,tsx}": [
      "eslint",
      "prettier --write"
    ]
  }
}
